
@model SystranHorizonte.Models.Carga

<h2>Modificar</h2>
<br />
<div class="row">
    <div class="col-md-12">
        <form action="@Url.Action("Modificar", "Cargas")" method="post">
            <div class="col-md-6">
                <div class="col-md-12" title="Rango de carga: 0 - 15 kg">
                    <div class="col-md-12">
                        <label>Peso*(Kg)</label>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <input type="number" name="Peso" class="form-control" placeholder="0" required value="@Model.Peso" />
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <input type="number" name="Peso2" class="form-control" placeholder="15" required value="@Model.Peso2" />
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Precio*</label>
                            <input type="number" name="PrecioText" class="form-control" value="@Model.PrecioText" required min="0.00" step="0.01" />
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Tipo*</label>
                            <select class="form-control" name="TipoString" required>
                                <option value="Encomiendas">Encomiendas</option>
                                <option value="Pasajes">Pasajes</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Estado*</label>
                            <select class="form-control" name="Estado" required>
                                <option value=true>Activo</option>
                                <option value=false>Inactivo</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <div class="col-md-12">
                    <button class="btn btn-danger btn-lg" type="submit">Guardar</button>
                </div>
            </div>
        </form>
    </div>
</div>
