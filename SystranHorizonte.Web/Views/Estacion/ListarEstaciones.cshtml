
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Estaciones</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="col-md-4">
            <div class="form-group">
                <label>Criterio:</label>
                <input type="text" id="txtBuscar" name="criterio" class="form-control" onkeyup="buscarCriterio()" />
            </div>
        </div>
    </div>
    <br />
    <br />
    <div class="col-md-12" id="list">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Ciudad</th>
                    <th>Provincia</th>
                    <th>Direccion</th>
                    <th>Telefono</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Codigo</td>
                        <td>@item.Ciudad</td>
                        <td>@item.Provincia</td>
                        <td>@item.Direccion</td>
                        <td>@item.Telefono</td>
                        <td>@item.EstadoMostrar</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function buscarCriterio() {
        var criterio = $('#txtBuscar').val();

        $.get("Buscar2", { 'criterio': criterio })
        .success(function (response) {
            $('#list').html(response);
        });
    }
</script>