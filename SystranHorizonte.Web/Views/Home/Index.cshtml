<input type="hidden" name="name" id="idMensaje" value="@ViewBag.Mensaje" />

<div class="modal fade" id="PopupIndex">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Alerta!</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <p>@ViewBag.Mensaje</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="btnCerrarModal" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script>
    $(document).ready(function(){
        $('.myCarousel').carousel()
        var x = $("#idMensaje").val();
        if (x != "") {
            //$('#PopupIndex').modal('show');
            alert(x);
            window.location.href = @Url.Action("Index", "Home");
        }

        $.ajaxSetup({
            cache: false
        });

        setTimeout(reloadAsync, 1000);
    });

    $("#btnCerrarModal").click(function (e) {
        window.location.href = @Url.Action("Index", "Home");
    });

    function reloadAsync() {

        $.get('@Url.Action("VistaHorarios", "Horario")')
        .success(function (response) {
            $('#salidaVehiculos').html(response);
        });

        setTimeout(reloadAsync, 900000);
    }
</script>