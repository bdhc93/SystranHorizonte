@model SystranHorizonte.Models.Venta
<h2>Agregar Vehiculo</h2>
<br />
<div class="row">
    <div class="col-md-12">
        <form action="@Url.Action("AgregarVehiculo", "Vehiculo")" method="post">
            <div class="col-md-6">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>TarjetaPropiedad</label>
                        <input type="text" name="TarjetaPropiedad" class="form-control" placeholder="12356889798" required/>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>NroPlaca</label>
                        <input type="text" name="NroPlaca" class="form-control" placeholder="AEC - 4587" required />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>FechaSoat</label>
                        <input id="FechaSoatId" type="date" name="FechaSoat" class="form-control" value="@ViewBag.FechaSoat" required />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>FechaSoatFin</label>
                        <input id="FechaSoatFinId" type="date" name="FechaSoatFin" class="form-control" value="@ViewBag.FechaSoat" min="@ViewBag.FechaSoat" required />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>FechaRevisionTecnica</label>
                        <input id="FechaRevisionTecnicaId" type="date" name="FechaRevisionTecnica" class="form-control" value="@ViewBag.FechaRevisionTecnica" required/>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>FechaRevisionTecnicaFin</label>
                        <input id="FechaRevisionTecnicaFinId" type="date" name="FechaRevisionTecnicaFin" class="form-control" value="@ViewBag.FechaRevisionTecnica" required/>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Ancho</label>
                        <input type="number" name="AnchoText" class="form-control" placeholder="3.5" min="1.00" required step="0.01"/>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Largo</label>
                        <input type="number" name="LargoText" class="form-control" placeholder="1.5" min="1.00" required step="0.01"/>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Asientos</label>
                        <input type="number" name="Asientos" id="txtasientos" class="form-control" placeholder="20" maxlength="2" required />
                    </div>
                </div>
            </div>
            
            @*<div class="col-md-6">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Tipo</label>
                        <select class="form-control" name="Tipo">
                            <option value=1>Tipo 1</option>
                            <option value=2>Tipo 2</option>
                            <option value=3>Tipo 3</option>
                        </select>
                    </div>
                </div>
            </div>*@
            <div class="col-md-6">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Estado</label>
                        <select class="form-control" name="Estado">
                            <option value=true>Activo</option>
                            <option value=false>Inactivo</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-12" style="margin-left:-16px"><label>Tipo</label></div>
                        <div class="col-md-11" style="margin-left:-16px">
                            <select class="form-control" name="Tipo">
                                <option value=1>Tipo 1</option>
                                <option value=2>Tipo 2</option>
                                <option value=3>Tipo 3</option>
                            </select>
                        </div>
                        <div class="col-md-1"><a class="btn btn-info" href="@Url.Action("ClientesPrin", "Vehiculo")" id="btnBuscar">...</a></div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <button class="btn btn-danger btn-lg" type="submit">Guardar</button>
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#txtasientos").keydown(function (e) {

            if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 110, 190]) !== -1 ||

                (e.keyCode == 65 && e.ctrlKey === true) ||

                (e.keyCode == 67 && e.ctrlKey === true) ||

                (e.keyCode == 88 && e.ctrlKey === true) ||

                (e.keyCode >= 35 && e.keyCode <= 39)) {

                return;
            }

            if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
                e.preventDefault();
            }
        });
    });

    $("#FechaSoatId").change(function (e) {
        $("#FechaSoatFinId").attr("min", $("#FechaSoatId").val())
    });

    $("#FechaRevisionTecnicaId").change(function (e) {
        $("#FechaRevisionTecnicaFinId").attr("min", $("#FechaRevisionTecnicaId").val())
    });
</script>