@{
    IEnumerable<SelectListItem> Estaciones = new SelectList(@ViewBag.Estacion, "Id", "EstacionesT");
}

<h2>Encomiendas</h2>

<div class="row">
    <div class="col-md-12">
        <a class="btn btn-default pull-right" href="@Url.Action("AgregarEncomienda", "Encomienta")">Nueva Encomienda</a><br />
    </div>
    <div class="col-md-12">
        <div class="col-md-4">
            <div class="form-group">
                <label>Criterio:</label>
                <input type="text" class="form-control" id="txtBuscar" onkeyup="buscarVentas()" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>Fecha Inicio:</label>
                <input type="date" class="form-control" id="txtCalendar" onkeyup="buscarVentas()" value="@ViewBag.Fecha" />
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="col-md-4">
            <div class="form-group">
                <label>EstacionOringen:</label>
                @Html.DropDownList("IdOrigen", Estaciones, "-- Seleccionar --", new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label>Fecha Fin:</label>
                <input type="date" class="form-control" id="txtCalendar2" onkeyup="buscarVentas()" value="@ViewBag.Fecha" />
            </div>
        </div>
    </div>
    <br />
    <br />
    <div class="col-md-12" id="listVentas">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>NroVenta</th>
                    <th>DniRuc</th>
                    <th>Nombre</th>
                    <th>Telefono</th>
                    <th>TotalVenta</th>
                    <th>Fecha</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NroVenta</td>
                        <td>@item.Cliente.DniRuc</td>
                        <td>@item.Cliente.Nombre</td>
                        <td>@item.Cliente.Telefono</td>
                        <td>@item.TotalVenta</td>
                        <td>@item.Fecha</td>
                        <td><a href="#" id="btnVer">Ver</a> | <a href="@Url.Action("ModificarVenta", "Venta",new {id = @item.Id})">Editar</a> | <a href="#" onclick="abrirmodalelim(@item.Id)">Eliminar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="modal fade" id="BuscarVenta">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Detalle Encomienda</h4>
                </div>

                <div class="col-md-12">
                    <div id="DetalleVenta">
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>