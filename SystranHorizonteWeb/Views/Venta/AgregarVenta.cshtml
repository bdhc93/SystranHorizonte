@{
    ViewBag.Title = " - Venta";
}


<div class="row">
    <form action="@Url.Action("AgregarVenta", "Venta")" method="post">
        <fieldset>
            <legend>Nueva Venta</legend>
            <div class="col-md-12">

                <div class="col-md-6">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Nro Venta</label>
                            <input type="text" name="NroVenta" class="form-control" placeholder="1345" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Fecha</label>
                            <input type="date" name="Fecha" class="form-control" value="@ViewBag.Fecha" readonly="True" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>DniRuc</label>
                            <input type="text" name="RucDniCliente" class="form-control" placeholder="73136701" maxlength="11" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Direccion</label>
                            <input type="text" name="Direccion" class="form-control" placeholder="Jr. San Miguel 452" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Nombre</label>
                            <input type="text" name="Nombre" class="form-control" placeholder="Carlos" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Telefono</label>
                            <input type="text" name="Telefono" class="form-control" placeholder="076 365458" />
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Apellidos</label>
                            <input type="text" name="Apellidos" class="form-control" placeholder="Alberto" />
                        </div>
                    </div>
                </div>

            </div>
        </fieldset>

        <br />
        <br />

        <fieldset>
            <legend>Nueva Venta</legend>
            <a class="btn btn-link pull-right" onclick="abrirModalPasajes()">Agregar Pasaje</a>
            <table class="table">
                <thead>
                    <tr>
                        <th>DniRuc</th>
                        <th>Nombre</th>
                        <th>N Asiento</th>
                        <th>Origen</th>
                        <th>Destino</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="VentaTBody"></tbody>
            </table>
            <div class="col-md-12">
                <button class="btn btn-danger btn-lg" type="submit">Guardar</button>
            </div>
        </fieldset>
    </form>
</div>

<div class="modal fade" id="CrearPasaje">
    <div class="modal-dialog" style="min-width:800px">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Detalle Pasaje</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12" id="PasajeTable">
                    </div>
                </div>
            </div>
            @*<div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>*@
        </div>
    </div>
</div>

<script>
    function abrirModalPasajes() {

        $.get('@Url.Action("DetalleVenta", "Venta")')
        .success(function (respuesta) {
            $('#PasajeTable').html(respuesta);
            $('#CrearPasaje').modal('show');
        });

    }
</script>
